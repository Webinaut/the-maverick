---
const year = new Date();
---

<div class="container-fluid">
  <footer>
    &copy; One Stop Sites 2017 - <span id="footer-year"
      >{year.getFullYear()}</span
    >
  </footer>
</div>
<style>
  .container-fluid {
    height: 70px;
    background-color: var(--pico-primary-background);
    display: flex;
    align-items: center;
    justify-content: center;
    /* padding: 0 20px; */
  }

  footer {
    color: #f5f5f5;
    /* Applies top and bottom paddings */
    /* padding: 3rem 0; */
    /* Centers the text content */
    text-align: center;
    /* Makes the font smaller */
    font-size: 0.9rem;
  }
</style>
